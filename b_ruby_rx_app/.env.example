# Server Configuration
PORT=5500
NODE_ENV=production

# Main Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_USER=your_user
DB_PASSWORD=your_password
DB_NAME=ruby_ai_db
DB_PORT=5432

# Medicine Database Configuration (PostgreSQL)
MEDICINE_DB_HOST=localhost
MEDICINE_DB_USER=your_user
MEDICINE_DB_PASSWORD=your_password
MEDICINE_DB_NAME=ruby_ai_db
MEDICINE_DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5500/auth/google/callback

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:5500/auth/linkedin/callback

# Email Configuration (Gmail)
EMAIL_USER=your_email@gmail.com
GOOGLE_EMAIL_USER=your_email@gmail.com
GOOGLE_APP_PASSWORD=your_google_app_password

# WhatsApp Sender API
WASENDER_API_KEY=your_wasender_api_key_here

# Google Cloud Configuration (for Vision API and Generative AI)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id

# Optional: Google Generative AI API Key (if using separate API key)
GOOGLE_GENERATIVE_AI_API_KEY=your_generative_ai_api_key